<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 single_instance="true"
 name="message_rewriter"
 title="Message Rewriter"
 width="400"
 min_width="400"
 height="500"
 min_height="500"
 can_close="true"
 can_resize="true"
 can_minimize="true"
 save_rect="true">
	<scroll_list
     column_padding="0"
     draw_heading="true"
     follows="left|top|right"
     left="4"
     bottom="130"
     right="-4"
     height="350"
     name="rule_list"
     mouse_opaque="false"
     search_column="0">
		<column name="icon_enabled" label="Enabled" width="24" />
		<column dynamicwidth="true" name="RuleName" label="Rule Name" />
		<column name="direction" label="In/Out" width="64" />
	</scroll_list>
	<text_editor
     name="rule_editor"
     follows="left|top|right|bottom"
     left="4"
     bottom_delta="-100"
     height="92"
     right="-4"
     enabled="true"
     max_length="65535" />
	<text
     bg_visible="false"
     bottom_delta="-20"
     follows="left|bottom"
     font="SansSerifSmall"
     height="14"
     left="4"
     name="message_type_label"
     width="80">
	Message Type:
	</text>
	<combo_box
     allow_text_entry="false"
     bottom_delta="-2"
     follows="left|right|bottom"
     height="20"
     left_delta="80"
     max_chars="100"
     mouse_opaque="true"
     name="message_type"
     width="180" />
	<button
     name="save_rules"
     follows="right|bottom"
     bottom_delta="0"
     width="120"
     height="20"
     right="-4"
     label="Save Rules"
     enabled="true"/>
</floater>
